<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Obra</h3>
        </div>
        <div class="card-body">
            <form action="/edit/editar/{{obra.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="usr">Titulo:</label>
                    <input type="text" name="title" class="form-control" id="usr" value="{{obra.title}}">
                </div>
                <div class="form-group">
                    <label for="usr">Autor:</label>
                    <input type="text" name="autor" class="form-control" id="usr"value="{{obra.autor}}">
                </div>
                <div class="form-group">
                    <label for="usr">Descripcion:</label>
                    <input type="text" name="short_description" class="form-control" id="usr"value="{{obra.short_description}}">
                </div>
                <div class="form-group">
                    <label for="usr">Valor:</label>
                    <input type="text" name="value" class="form-control"value="{{obra.value}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>